{
  "name": "crypto-gaze",
  "version": "1.0.0",
  "description": "A simple CAP for your crypto gazing needs.",
  "repository": "https://github.com/mamutuberalles/szakdoga_2023/",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4",
    "jest": "^29.5.0",
    "node-schedule": "^2.1.1",
    "react-pro-sidebar": "^1.0.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "expect": "^29.5.0",
    "sqlite3": "^5.1.6"
  },
  "scripts": {
    "start": "set mode=run& cds run",
    "test": "set mode=test& jest --detectOpenHandles"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "sqlite.db"
        }
      }
    }
  }
}
